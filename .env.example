# Claude Code API Configuration Example

# API Configuration
API_TITLE="Claude Code API Gateway"
API_VERSION="1.0.0"
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# Authentication
API_KEYS="your-api-key-1,your-api-key-2"
REQUIRE_AUTH=false

# Claude Configuration
CLAUDE_BINARY_PATH="/usr/local/bin/claude"
CLAUDE_API_KEY="your-anthropic-api-key"
ANTHROPIC_BASE_URL="your_anthropic_api_url_here"
ANTHROPIC_AUTH_TOKEN="your_anthropic_api_key_here"
DEFAULT_MODEL="claude-3-5-sonnet-20241022"

# Project Configuration
PROJECT_ROOT="/tmp/claude_projects"
MAX_PROJECT_SIZE_MB=1000

# Database Configuration
DATABASE_URL="sqlite:///./claude_api.db"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# CORS Configuration
ALLOWED_ORIGINS="*"
ALLOWED_METHODS="*"
ALLOWED_HEADERS="*"

# File Monitoring Ignore Patterns (gitignore-style)
# You can use comma-separated patterns or newline-separated patterns
FILE_WATCH_IGNORE_PATTERNS="*.tmp,*.temp,*.log,*.swp,*.swo,*~,.DS_Store,Thumbs.db,node_modules/,.git/,.svn/,.hg/,__pycache__/,*.pyc,*.pyo,.pytest_cache/,.coverage,*.egg-info/,dist/,build/,.vscode/,.idea/,*.lock"

# Alternative: Multi-line format (use this for complex patterns)
# FILE_WATCH_IGNORE_PATTERNS="
# # Temporary files
# *.tmp
# *.temp
# *.swp
# *.swo
# *~
#
# # System files
# .DS_Store
# Thumbs.db
#
# # Dependencies
# node_modules/
# .git/
# __pycache__/
# "
